{
  "name": "pokerai-web-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "repository": "https://github.com/cmu-dsc/poker-server.git",
  "author": "Tobias Schamel <tobias.schamel@tum.de>",
  "license": "MIT",
  "scripts": {
    "prepare": "cd .. && husky install",
    "lint": "eslint .",
    "dev": "yarn api:gen && nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "yarn api:gen && run-s clean compile postBuild",
    "postBuild": "ncp node_modules dist/node_modules",
    "start": "yarn run build && node -r tsconfig-paths/register dist/src/server.js",
    "clean": "rimraf dist",
    "compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "api:gen": "rimraf ./api/generated && openapi --input ./api/src/api.yaml --output ./api/generated"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.6.3",
    "ts-dotenv": "^0.9.1",
    "tsc-alias": "^1.8.7",
    "winston": "^3.9.0",
    "yamljs": "^0.3.0",
    "yarn": "^1.22.19",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.0.11",
    "jest": "^29.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "openapi-typescript-codegen": "^0.24.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ]
  }
}

{
  "name": "pokerai-web-backend",
  "version": "1.0.0",
  "main": "src/server.ts",
  "repository": "https://github.com/cmu-dsc/poker-server.git",
  "author": "Tobias Schamel <tobias.schamel@tum.de>",
  "license": "MIT",
  "scripts": {
    "prepare": "cd .. && husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "bun run api:gen && bun --watch src/server.ts",
    "build": "bun run api:gen && bun run prisma:gen && bun build src/server.ts --outdir dist --target bun",
    "start": "bun run build && bun dist/server.js",
    "clean": "rm -rf dist",
    "api:gen": "rm -rf ./api/generated && bunx openapi-typescript-codegen --input ./api/src/api.yaml --output ./api/generated",
    "prisma:gen": "bunx prisma generate",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down"
  },
  "dependencies": {
    "@prisma/client": "^5.21.0",
    "@prisma/extension-read-replicas": "^0.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "firebase-admin": "^12.0.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.1",
    "ts-dotenv": "^0.9.1",
    "winston": "^3.13.0",
    "yamljs": "^0.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.26",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "openapi-typescript-codegen": "^0.28.0",
    "prettier": "^2.8.8",
    "prisma": "^5.21.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ]
  }
}